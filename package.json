{
  "name": "lab",
  "type": "module",
  "version": "0.1.0",
  "description": "Agent-native blog platform for AI & automation content",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "typecheck": "astro check && tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:load": "artillery run tests/load/traffic-spikes.yml",
    "lint": "eslint . --ext .ts,.tsx,.astro",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "cli": "tsx cli/lab.ts"
  },
  "dependencies": {
    "astro": "^4.16.0",
    "@astrojs/check": "^0.9.0",
    "@astrojs/tailwind": "^5.1.0",
    "@astrojs/sitemap": "^3.2.0",
    "tailwindcss": "^3.4.0",
    "zod": "^3.23.0",
    "drizzle-orm": "^0.36.0",
    "postgres": "^3.4.0",
    "ioredis": "^5.4.0",
    "commander": "^12.1.0",
    "ora": "^8.1.0",
    "chalk": "^5.3.0",
    "marked": "^15.0.0",
    "gray-matter": "^4.0.3",
    "reading-time": "^1.5.0"
  },
  "devDependencies": {
    "typescript": "^5.6.0",
    "tsx": "^4.19.0",
    "vitest": "^2.1.0",
    "@playwright/test": "^1.48.0",
    "artillery": "^2.0.0",
    "drizzle-kit": "^0.28.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.13.0",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint-plugin-astro": "^1.3.0"
  }
}
