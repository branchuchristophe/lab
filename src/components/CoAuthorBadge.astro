---
interface Props {
  author: string;
  aiContributors?: string[];
  coauthorNote?: string;
  validationLevel: 'experimental' | 'tested' | 'production';
  coauthored: boolean;
}

const {
  author,
  aiContributors = [],
  coauthorNote,
  validationLevel,
  coauthored,
} = Astro.props;

const validationConfig = {
  experimental: {
    label: 'Experimental',
    color: 'bg-yellow-500/10 text-yellow-500 border-yellow-500/20',
    icon: '⚠️',
    description: 'This content is experimental and may need further testing.',
  },
  tested: {
    label: 'Tested',
    color: 'bg-blue-500/10 text-blue-500 border-blue-500/20',
    icon: '✓',
    description: 'This content has been tested and validated.',
  },
  production: {
    label: 'Production',
    color: 'bg-green-500/10 text-green-500 border-green-500/20',
    icon: '✓✓',
    description: 'This content is production-ready and thoroughly validated.',
  },
};

const validation = validationConfig[validationLevel];
---

<div class="border border-neutral-800 rounded-lg p-6 bg-neutral-900/50 space-y-4">
  <!-- Author section -->
  <div class="flex items-start gap-4">
    <div class="flex-1">
      <div class="text-sm text-neutral-500 mb-2">Written by</div>
      <div class="flex flex-wrap items-center gap-2">
        <!-- Human author -->
        <div class="flex items-center gap-2 px-3 py-1.5 bg-neutral-800 rounded-full">
          <svg class="w-4 h-4 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span class="text-sm font-medium text-neutral-100">{author}</span>
          <span class="text-xs text-neutral-500">Human</span>
        </div>

        <!-- AI co-authors -->
        {coauthored && aiContributors.length > 0 && (
          <>
            <span class="text-neutral-600">+</span>
            {aiContributors.map((ai) => (
              <div class="flex items-center gap-2 px-3 py-1.5 bg-primary-500/10 border border-primary-500/20 rounded-full">
                <svg class="w-4 h-4 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
                <span class="text-sm font-medium text-primary-400">{ai}</span>
                <span class="text-xs text-primary-500/70">AI</span>
              </div>
            ))}
          </>
        )}
      </div>
    </div>

    <!-- Validation badge -->
    <div class={`flex items-center gap-2 px-3 py-1.5 border rounded-full ${validation.color}`}>
      <span class="text-sm">{validation.icon}</span>
      <span class="text-sm font-medium">{validation.label}</span>
    </div>
  </div>

  <!-- Transparency callout -->
  {coauthored && (
    <div class="pt-4 border-t border-neutral-800">
      <div class="flex items-start gap-3">
        <div class="flex-shrink-0 mt-0.5">
          <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="flex-1">
          <div class="text-sm font-medium text-neutral-200 mb-1">AI Co-Authorship Transparency</div>
          <p class="text-sm text-neutral-400">
            {coauthorNote ||
              'This article was co-authored with AI assistance. The human author maintains editorial control and validates all content.'}
          </p>
        </div>
      </div>
      <div class="mt-3 text-xs text-neutral-500">
        <span class="font-medium">Validation:</span> {validation.description}
      </div>
    </div>
  )}
</div>
